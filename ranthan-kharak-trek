<!-- Trek Months --><script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
$(document).on('click', '.month-tab', function() {
    var parentSection = $(this).closest('.month-section');
    var datesList = parentSection.find('.dates-list');

    if ($(this).hasClass('active')) {
        $(this).removeClass('active');
        datesList.slideUp();
    } else {
        $('.month-tab').removeClass('active');
        $('.dates-list').slideUp();
        $(this).addClass('active');
        datesList.slideDown();
    }
});
</script>

<!-- read more -->
<script>
  let hiddenElements = []; 

  document.addEventListener("DOMContentLoaded", function () {
    const container = document.getElementById("overviewContainer");
    const children = container.children;

    for (let i = 2; i < children.length; i++) {
      children[i].style.display = "none";
      hiddenElements.push(children[i]);
    }

    if (children.length <= 1) {
      document.getElementById("readMoreBtn").style.display = "none";
    }
  });

  function toggleReadMore() {
    const btnText = document.getElementById("readMoreText");
    const icon = document.getElementById("readMoreIcon");

    const isHidden = hiddenElements[0] && hiddenElements[0].style.display === "none";

    hiddenElements.forEach(el => {
      el.style.display = isHidden ? "block" : "none";
    });

    if (isHidden) {
      btnText.textContent = "Read Less";
      icon.classList.remove("fa-caret-down");
      icon.classList.add("fa-caret-up");
    } else {
      btnText.textContent = "Read More";
      icon.classList.remove("fa-caret-up");
      icon.classList.add("fa-caret-down");
    }
  }
</script>

<!-- Trek Popup -->
<script>
    function openModal(videoId) {
      const url = `https://www.youtube.com/embed/${videoId}?autoplay=1`;
      document.getElementById('videoModal').style.display = 'flex';
      document.getElementById('videoPlayer').src = url;
    }

    function closeModal() {
      document.getElementById('videoModal').style.display = 'none';
      document.getElementById('videoPlayer').src = '';
    }
  </script>
  
<!-- dropdown-deyal itinerary -->
<script>
// Top-level dropdown toggle (e.g., FAQ sections and main dropdowns)
document.querySelectorAll('.detaildropdown-btn').forEach(btn => {
  btn.addEventListener('click', () => {
    const content = btn.nextElementSibling;

    // Close all other dropdown contents except current
    document.querySelectorAll('.detaildropdown-content').forEach(el => {
      if (el !== content) el.style.display = 'none';
    });

    // Remove active class from other buttons except current
    document.querySelectorAll('.detaildropdown-btn').forEach(b => {
      if (b !== btn) b.classList.remove('active');
    });

    // Toggle current dropdown open/close
    const isOpen = content.style.display === 'block';
    content.style.display = isOpen ? 'none' : 'block';
    btn.classList.toggle('active', !isOpen);
  });
});

// Inner FAQ question toggle (for FAQ answers inside FAQ dropdown)
document.querySelectorAll('.detailfaq-question').forEach(btn => {
  btn.addEventListener('click', () => {
    const answer = btn.nextElementSibling;

    // Close other FAQ answers except current
    document.querySelectorAll('.detailfaq-answer').forEach(a => {
      if (a !== answer) {
        a.style.display = 'none';
        a.classList.remove('active');
      }
    });

    // Remove active class from other FAQ questions except current
    document.querySelectorAll('.detailfaq-question').forEach(b => {
      if (b !== btn) b.classList.remove('active');
    });

    // Toggle current FAQ answer open/close with active classes
    const isOpen = answer.style.display === 'block';
    answer.style.display = isOpen ? 'none' : 'block';
    answer.classList.toggle('active', !isOpen);
    btn.classList.toggle('active', !isOpen);
  });
});

// Tab switching inside "How Does Each Day Look"
document.querySelectorAll('.detailtab').forEach(tab => {
  tab.addEventListener('click', () => {
    const target = tab.dataset.tab;

    // Deactivate all tabs and hide all contents
    document.querySelectorAll('.detailtab').forEach(t => t.classList.remove('active'));
    document.querySelectorAll('.detailtab-content').forEach(tc => tc.classList.remove('active'));

    // Activate clicked tab and show corresponding content
    tab.classList.add('active');
    document.getElementById(target).classList.add('active');
  });
});



</script>

<!-- Trek Gallery -->
<script>
// All images data by season (full list)
const galleryData = {
    summer: [
                {
            src: "root-admin-laravel-panel/uploads/trek_gallery/68c739a47e534.webp",
            caption: "Ranthan Kharak Trek",
            alt: "Ranthan Kharak Trek"
        },
                {
            src: "root-admin-laravel-panel/uploads/trek_gallery/68c739a47e822.webp",
            caption: "Ranthan Kharak Trek",
            alt: "Ranthan Kharak Trek"
        },
                {
            src: "root-admin-laravel-panel/uploads/trek_gallery/68c739a47ea8a.webp",
            caption: "Ranthan Kharak Trek",
            alt: "Ranthan Kharak Trek"
        },
                {
            src: "root-admin-laravel-panel/uploads/trek_gallery/68c739a47ec96.webp",
            caption: "Ranthan Kharak Trek",
            alt: "Ranthan Kharak Trek"
        },
                {
            src: "root-admin-laravel-panel/uploads/trek_gallery/68c739a47ee2e.webp",
            caption: "Ranthan Kharak Trek",
            alt: "Ranthan Kharak Trek"
        },
            ]
};

  // Track current season and page
let currentSeason = 'summer';
let currentPage = 1;

// Store currently displayed images for lightbox navigation
let currentImages = [];
let currentLightboxIndex = 0;

// Determine images per page based on screen width
function getImagesPerPage() {
  if(window.innerWidth <= 768) return 6; // Mobile devices show 6 images per page
  else return 12; // Desktop and laptop show 12 images per page
}

// Render the images grid for the current season and page
function renderGallery(season, page) {
  const galleryDiv = document.getElementById(season);
  const images = galleryData[season];
  const perPage = getImagesPerPage();
  const start = (page - 1) * perPage;
  const end = start + perPage;
  const imagesToShow = images.slice(start, end);

  // Clear current gallery content
  galleryDiv.innerHTML = '';

  // Store current images for lightbox
  if(season === currentSeason){
    currentImages = imagesToShow;
  }

  // Insert images
  imagesToShow.forEach((img, index) => {
    const imageElem = document.createElement('img');
    imageElem.src = img.src;
    imageElem.alt = img.caption || "Gallery image";
    imageElem.className = 'detailgallery-image';

    // Image height is set here
    imageElem.style.height = '250px'; // You can change this value
    imageElem.style.objectFit = 'cover'; // This fits the image to a fixed height without distortion

    imageElem.setAttribute('data-index', start + index); // For lightbox
    imageElem.addEventListener('click', () => openLightbox(start + index));
    galleryDiv.appendChild(imageElem);
  });

  renderPagination(season, page, images.length, perPage);
}

// Render pagination buttons
function renderPagination(season, currentPage, totalImages, perPage) {
  const paginationDiv = document.getElementById(season + '-pagination');
  paginationDiv.innerHTML = '';

  const totalPages = Math.ceil(totalImages / perPage);

  if(totalPages <= 1) return; // No pagination if 1 or less pages

  // Create Prev button
  const prevBtn = document.createElement('button');
  prevBtn.textContent = 'Prev';
  prevBtn.disabled = currentPage === 1;
  prevBtn.addEventListener('click', () => {
    if(currentPage > 1) {
      currentPage--;
      updateGallery(season, currentPage);
    }
  });
  paginationDiv.appendChild(prevBtn);

  // Page number buttons
  for(let i = 1; i <= totalPages; i++){
    const btn = document.createElement('button');
    btn.textContent = i;
    if(i === currentPage) btn.classList.add('active');
    btn.addEventListener('click', () => {
      updateGallery(season, i);
    });
    paginationDiv.appendChild(btn);
  }

  // Create Next button
  const nextBtn = document.createElement('button');
  nextBtn.textContent = 'Next';
  nextBtn.disabled = currentPage === totalPages;
  nextBtn.addEventListener('click', () => {
    if(currentPage < totalPages) {
      currentPage++;
      updateGallery(season, currentPage);
    }
  });
  paginationDiv.appendChild(nextBtn);
}

// Update gallery content when pagination or tab changes
function updateGallery(season, page) {
  currentSeason = season;
  currentPage = page;
  // Update active gallery visibility
  document.querySelectorAll('.detailgallery-gallery').forEach(g => {
    g.classList.remove('active');
  });
  document.getElementById(season).classList.add('active');

  // Update active tab button
  document.querySelectorAll('.detailgallery-tab-button').forEach(btn => {
    btn.classList.remove('active');
  });
  document.querySelector(`.detailgallery-tab-button[onclick="switchTab('${season}', event)"]`).classList.add('active');

  // Render images + pagination for season
  renderGallery(season, page);

  // Hide other paginations
  document.querySelectorAll('.pagination').forEach(p => {
    p.style.display = 'none';
  });
  document.getElementById(season + '-pagination').style.display = 'block';
}

// Switch tabs (seasons)
function switchTab(season, event) {
  event.preventDefault();
  updateGallery(season, 1);
}

// Lightbox controls
function openLightbox(index) {
  currentLightboxIndex = index;
  showLightboxImage();
  document.getElementById('lightbox').style.display = 'flex';
}

function closeLightbox() {
  document.getElementById('lightbox').style.display = 'none';
}

function showLightboxImage() {
  // currentLightboxIndex is global image index in full array
  const images = galleryData[currentSeason];
  const imgData = images[currentLightboxIndex];

  const lightboxImg = document.getElementById('lightbox-img');
  const caption = document.getElementById('lightbox-caption');

  if(imgData){
    lightboxImg.src = imgData.src;
    caption.textContent = imgData.caption || '';
  }
}

function prevImage() {
  const images = galleryData[currentSeason];
  currentLightboxIndex = (currentLightboxIndex - 1 + images.length) % images.length;
  showLightboxImage();
}

function nextImage() {
  const images = galleryData[currentSeason];
  currentLightboxIndex = (currentLightboxIndex + 1) % images.length;
  showLightboxImage();
}

// Handle window resize for responsive images per page
window.addEventListener('resize', () => {
  updateGallery(currentSeason, 1);
});

// Initialize gallery on page load
window.onload = () => {
  updateGallery(currentSeason, 1);
};
</script>
    
    <script>
const hero = document.getElementById("heroSection");
const contactBtn = document.getElementById("contactBtn");
const whatsappBtn = document.getElementById("whatsappBtn");

window.addEventListener("scroll", () => {

    const heroHeight = hero.offsetHeight;
    const scrollY = window.scrollY;

    if (scrollY < heroHeight) {
        // Hero है → hide buttons
        contactBtn.classList.add("hide");
        whatsappBtn.classList.add("hide");
    } else {
        // Hero→ show buttons
        contactBtn.classList.remove("hide");
        whatsappBtn.classList.remove("hide");
    }

});
</script>
</body>
