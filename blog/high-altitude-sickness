<section class="hero-section" style="width: 100%; height: 400px; background-image: url('https://himalayanhikers.in/root-admin-laravel-panel//uploads/blog/banner/maxresdefault.jpg'); background-repeat: no-repeat; background-position: center center; background-size: cover;">
