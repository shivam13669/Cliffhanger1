   padding: 30px 50px 10px 50px;
   width: 100%;
   box-sizing: border-box;
   position: relative; /* Required for pseudo-element */
   /* Remove border-bottom from here */
   }
   .top-section-cat::after {
   content: "";
   position: absolute;
   bottom: 0;
   left: 50px;
   height: 2px;
   width: calc(100% - 100px); /* 50px padding on both sides */
