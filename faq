   display: flex;
   flex-direction: column;
   justify-content: flex-start;
   height: 340px; /* Fixed height */
   overflow: hidden;
   }
   .card-cat:hover {
   transform: none; /*  No hover animation */
   }
   .card-cat h3 {
   font-size: 13px;
   color: black;
   margin-bottom: 16px;
   text-align: left;
   border-bottom: 2px solid #ff4300;;
